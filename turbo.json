{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NEXTAUTH_SECRET",
    "JWT_SECRET",
    "NEXTAUTH_URL",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "DATABASE_URL",
    "REDIS_URL",
    "SMTP_USER",
    "SMTP_PASS"
  ],
  "globalDependencies": [
    ".env",
    ".env.local",
    "packages/db/prisma/schema.prisma"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "env": [
        "NEXTAUTH_SECRET",
        "DATABASE_URL",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "SMTP_USER",
        "REDIS_URL",
        "SMTP_PASS"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NEXTAUTH_SECRET",
        "DATABASE_URL",
        "GOOGLE_CLIENT_ID",
        "REDIS_URL",
        "GOOGLE_CLIENT_SECRET",
        "SMTP_USER",
        "SMTP_PASS"
      ]
    },
    "db:generate": {
      "cache": false,
      "env": [
        "DATABASE_URL"
      ]
    },
    "db:push": {
      "cache": false,
      "env": [
        "DATABASE_URL"
      ]
    }
  }
}
